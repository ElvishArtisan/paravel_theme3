Summary: Simple Paravel Systems Theme for KDE
Name: paravel_theme3
Version: @VERSION@
Release: @RPM_RELEASE@%{?dist}
License: GPL
Packager: Fred Gleason <fredg@paravelsystems.com>
Group: Productivity/Multimedia/Other
Source: %{name}-%{version}.tar.gz
BuildRoot: /var/tmp/paravel_theme-%{version}
BuildArch: noarch
Requires: polymer


%description
Paravel Theme is a simple Paravel Systems theme for KDE.  It includes
wallpaper and a custom KSplash theme.

%prep
%setup -q

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT%{_bindir}
cp rddesktop_init.sh $RPM_BUILD_ROOT%{_bindir}/
mkdir -p $RPM_BUILD_ROOT/usr/share/rivendell
cp paravel_support.pdf $RPM_BUILD_ROOT/usr/share/rivendell/
mkdir -p $RPM_BUILD_ROOT/usr/share/backgrounds
cp wallpapers/Paravel_Axia_RD_black.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Axia_RD_red.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Axia_RD_white.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Black1024a.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Black1024b.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Black1024rd.png $RPM_BUILD_ROOT/usr/share/backgrounds/
cp wallpapers/Paravel_Gray1024.png $RPM_BUILD_ROOT/usr/share/backgrounds/
mkdir -p $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell
cp wallpapers/Paravel_Blue.png $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell/
cp wallpapers/Paravel_Blue_PS2.png $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell/
cp wallpapers/Paravel_rdairplay.png $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell/
cp wallpapers/rdairplay_skin.png $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell/
cp wallpapers/rdpanel_skin.png $RPM_BUILD_ROOT/usr/share/pixmaps/rivendell/
mkdir -p $RPM_BUILD_ROOT/usr/share/apps/ksplash/Themes/Paravel
cp ksplash/Theme.rc $RPM_BUILD_ROOT/usr/share/apps/ksplash/Themes/Paravel/
cp ksplash/*.png $RPM_BUILD_ROOT/usr/share/apps/ksplash/Themes/Paravel/
mkdir -p $RPM_BUILD_ROOT/etc/skel/Desktop
ln -s /usr/share/rivendell/paravel_support.pdf $RPM_BUILD_ROOT/etc/skel/Desktop/First\ Steps.pdf
#mkdir $RPM_BUILD_ROOT/etc/skel/.gconf
#tar -C $RPM_BUILD_ROOT/etc/skel/.gconf -xf gconf-config.tar 
mkdir $RPM_BUILD_ROOT/etc/skel/.qt
cp qt/qtrc $RPM_BUILD_ROOT/etc/skel/.qt/
mkdir -p $RPM_BUILD_ROOT/etc/skel/.config/autostart
cp rddesktop_init.desktop $RPM_BUILD_ROOT/etc/skel/.config/autostart
mkdir -p $RPM_BUILD_ROOT/etc/skel/.config/dconf
cp dconf-user $RPM_BUILD_ROOT/etc/skel/.config/dconf/user
mkdir -p $RPM_BUILD_ROOT/etc/skel/Pictures
cp wallpapers/Paravel_Gray1024.png $RPM_BUILD_ROOT/etc/skel/Pictures/
cp wallpapers/Paravel_Black1024a.png $RPM_BUILD_ROOT/etc/skel/Pictures/
cp wallpapers/Paravel_Black1024b.png $RPM_BUILD_ROOT/etc/skel/Pictures/
cp wallpapers/Paravel_Black1024rd.png $RPM_BUILD_ROOT/etc/skel/Pictures/

%clean
rm -rf $RPM_BUILD_ROOT

